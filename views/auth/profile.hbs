<div class="container">
  <div class="row box-round">
    <div class="col-sm-8 apartar">
      <h3>
        <i class="fas fa-user"></i> Usuario: {{eventAll.username}}</h3>
      <div class="d-flex justify-content-center">
        <img class="img-profile" src="{{eventAll.photo}}" alt="foto de perfil">
      </div>

      <form action="/auth/profile" method="POST" id="form-container" enctype="multipart/form-data">
        <div class="form-group row">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Usuario</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="username" name="username" value="{{eventAll.username}}">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputPassword3" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" value="{{eventAll.email}}">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputPassword3" class="col-sm-2 col-form-label">Contraseña</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password" name="password" placeholder="password">
          </div>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Foto</span>
          </div>

          <div class="custom-file">
            <label class="custom-file-label" for="photo">Elige una foto</label>
            <input type="file" class="custom-file-input" name="photo" id="photo">
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <button class="btn btn-maincolor">Guardar cambios</button>
        </div>
      </form>
    </div>


    <div class="col-sm-4 apartar">
      <h4>
        <i class="fas fa-calendar-alt"></i> Próximas fiestas</h4>
      <ul>
        {{#each eventAll.events}}

        <li>
          <a class="party-link" href="/event/{{id}}">{{name}}</a>
          <h6>{{time}}</h6>
          <h6>{{fechaOK}}</h6>
        </li>

        {{/each}}
      </ul>


    </div>

  </div>
  <div class="col-sm-12 box-round create-event justify-content-center">
    <a class="btn btn-maincolor" href="/event/new" role="button">Crear fiesta</a>
  </div>
</div>