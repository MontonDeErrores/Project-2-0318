<div class="container">
  <div class="row box-round apartar">
    <div id="map" class="hidemap"></div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA9sMOZtj7Sp4V7w9nZGmheBRXhDhSjveU"></script>

    <div class="col-sm-12 row justify-content-center">
      <form action="/event/new" method="POST" id="create-form" enctype="multipart/form-data">

        <div id="floating-panel row" class="form-group">
          <div class="col-slm-10 row d-flex justify-content-center">
            <input class="form-control" id="address" type="textbox" value="Madrid">
            <input id="submit" type="button" class="btn btn-maincolor btn-10" value="Buscar sitio...">
          </div>
        </div>

        <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Nombre</label>
          <div class="col-sm-10">
            <input class="form-control" id="name" type="text" name="name" placeholder="">
          </div>
        </div>

        <div class="form-group row">
          <label for="description" class="col-sm-2 col-form-label">Description</label>
          <div class="col-sm-10">
            <textarea rows="3" cols="1" id="description" class="form-control" name="description"></textarea>
          </div>
        </div>

        <div class="form-group row">
          <label for="date" class="col-sm-2 col-form-label">Fecha</label>
          <div class="col-sm-10">
            <input class="form-control" id="date" type="date" name="date" value="{{event.date}}" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="time" class="col-sm-2 col-form-label">Hora</label>
          <div class="col-sm-10">
            <input class="form-control" id="time" type="text" name="time" placeholder="">
          </div>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Foto</span>
          </div>

          <div class="custom-file">
            <label class="custom-file-label" for="photo">Elige una foto</label>
            <input class="custom-file-input" id="photo" type="file" name="photo">
          </div>
        </div>

        <div class="custom-control custom-checkbox">
          <input class="custom-control-input" id="pool" name="pool" type="checkbox">
          <label class="custom-control-label" for="pool">
            Pool:
          </label>
        </div>
        <div class="custom-control custom-checkbox">
          <input class="custom-control-input" id="bbq" name="bbq" type="checkbox">
          <label class="custom-control-label" for="bbq">
            BBQ:
          </label>
        </div>
        <div class="custom-control custom-checkbox">
          <input class="custom-control-input" id="children" name="children" type="checkbox">
          <label class="custom-control-label" for="children">
            Children:
          </label>
        </div>
        <div class="custom-control custom-checkbox">
          <input class="custom-control-input" id="wifi" name="wifi" type="checkbox">
          <label class="custom-control-label" for="wifi">
            Wifi:
          </label>
        </div>
        <div class="custom-control custom-checkbox">
          <input class="custom-control-input" id="private" name="private" type="checkbox">
          <label class="custom-control-label" for="private">
            Private:
          </label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="custom-control-input" id="parking" name="parking" type="checkbox">
            <label class="custom-control-label" for="parking">
                Parking: 
            </label>
          </div>
           <div class="custom-control custom-checkbox">
          <input class="custom-control-input" id="roof" name="roof" type="checkbox">
          <label class="custom-control-label" for="roof">
            Roof: 
          </label>
        </div>


        <label for="latitude">Latitude</label>
        <input id="latitude" type="text" name="latitude" placeholder="">
        <label for="longitude">Longitude</label>
        <input id="longitude" type="text" name="longitude" placeholder="">




        <div class="d-flex justify-content-center">
          <button class="btn btn-maincolor">Crear evento</button>
        </div>
      </form>
    </div>

