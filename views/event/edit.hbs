
<div class="container">
    <div class="row">
      <div id="map"></div>
  
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA9sMOZtj7Sp4V7w9nZGmheBRXhDhSjveU"></script>
      <br>
      <br>
      <form action="/event/{{event._id}}/edit" method="POST" id="form-container" enctype="multipart/form-data">
        <label for="name">Name</label>
        <input id="name" type="text" name="name" value="{{event.name}}">
        <br>
        <br>
        <label for="description">Description</label>
        <textarea rows="10" cols="50" id="description" class="form-control" name="description">{{event.description}}</textarea>
        <br>
        <br>
        <h2>Actual photo</h2>
        <img src="{{event.photo}}" alt="actual photo">
        <label for="photo">Change photo</label>
        <input id="photo" type="file" name="photo">
       
        <br>
        <br>
        <h3>Actual date: {{event.date}}</h3>
        <label for="date">New date</label>
        <input id="date" type="date" name="date" value="{{date}}">
        <br>
        <br>
        <label for="latitude">Latitude</label>
        <input id="latitude" type="text" name="latitude" value="{{event.location.coordinates.[0]}}">
        <br>
        <br>
        <label for="longitude">Longitude</label>
        <input id="longitude" type="text" name="longitude" value="{{event.location.coordinates.[1]}}">
        <br>
        <br>

        <label for="pool">Pool: </label>
        <input id="pool" name="pool" type="checkbox"  {{#if event.options.hasPool }} checked {{/if}}>
        <br>
        <br>
        <label for="bbq">BBQ: </label>
        <input id="bbq" name="bbq" type="checkbox" {{#if event.options.hasBBQ }} checked {{/if}}>
        <br>
        <br>
        <label for="children">Children: </label>
        <input id="children" name="children" type="checkbox" {{#if event.options.hasChildren }} checked {{/if}}>
        <br>
        <br>
        <label for="wifi">Wifi: </label>
        <input id="wifi" name="wifi" type="checkbox" {{#if event.options.hasWifi }} checked {{/if}}>
        <br>
        <br>
        <label for="private">Private: </label>
        <input id="private" name="private" type="checkbox" {{#if event.options.isPrivate }} checked {{/if}}>
        <br>
        <br>
        <label for="roof">Roof: </label>
        <input id="roof" name="roof" type="checkbox" {{#if event.options.hasRoof }} checked {{/if}}>
        <br>
        <br>
        <label for="parking">Parking: </label>
        <input id="parking" name="parking" type="checkbox" {{#if event.options.hasParking }} checked {{/if}}>
        <button>Save changes</button>
  
      </form>
  
      <p>Evento creado por: Admin</p>
  
      <button>Invita a un amigo</button>
    </div>
  </div>
